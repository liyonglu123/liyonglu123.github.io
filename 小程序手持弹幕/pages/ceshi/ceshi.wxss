.contain-wrapper {
  height: 100%;
  width: 100%;
  background: red;
  position: absolute;
  overflow: hidden;
  display: flex;
  justify-content: center;
}

.content {
    /* border:  1px solid blue; */
  /* width: 200%; */
  /* height: 60px; */
  display: inline-block;
  width: 100%;
  height: 60px;
  line-height: 60px;
  position: absolute;
  overflow: hidden;
  font-size: 60px;
  font-family: Arial, Helvetica, sans-serif;
  
  /* 下面的可以实现文字的旋转哦 */
  transform: rotate(90deg);
  -ms-transform: rotate(90deg);
  /* Internet Explorer 9*/
  -moz-transform: rotate(90deg);
  /* Firefox */
  -webkit-transform: rotate(90deg);
  /* Safari 和 Chrome */
  -o-transform: rotate(90deg);
  /* Opera */
  filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=1);
  animation: marquee 5s linear infinite;
}

/* 这里是避免卡顿的出现 */
/* .content text {
  float: left;
  width: 50%;
} */

@keyframes marquee {
  0% {
    top: 100%;
  }
  100% {
    top: -100%;
  }
}